<h1>Accounts</h1>

<%= link_to 'New Account', new_account_path %>

<br />
<br />

<table class="index">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Things</th>
    <th>Actions</th>
  </tr>

<% @accounts.each do |account| %>
  <% count = account.owner_things.count %>

  <tr>
    <td><%= account_link(account) %></td>
    <td><%= account.email %></td>
    <td><%= link_to count, account_things_path(account) %></td>
    <td>
      <%= link_to 'Show', account %> 
      <%= link_to 'Edit', edit_account_path(account) %>
      <%= link_to 'Destroy', account, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>
