<p id="notice"><%= notice %></p>

<h1><%= @thing.name %></h1>

<p>
  <b>Owners:</b>
  <% @thing.owners.each do |owner| %>
    <%= account_link(owner) %> 
  <% end %>
</p>

<p>
  <b>Details:</b>
  <%= @thing.details %>
</p>

<% if !@thing.quantity.nil? %>
<p>
  <b>Quantity:</b>
  <%= @thing.quantity %>
</p>
<% end %>

<p>
  <b>Tags:</b>
  <% @thing.tags_array.each do |tag| %>
    <%= link_to tag, tag_things_path(:tag => tag) %> 
  <% end %>
</p>

<p>
  <b>Caretakers:</b>
  <% @thing.caretakers.each do |caretaker| %>
    <%= account_link(caretaker) %> 
  <% end %>
</p>

<p>
  <b>Place:</b>
  <%= place_link(@thing.place) unless @thing.place.nil? %>
</p>

<p>
  <b>Last Updated:</b>
  <%= @thing.updated_at ? time_ago_in_words(@thing.updated_at) + " ago" : "" %>
</p>

<%= link_to 'Edit', edit_thing_path(@thing) %> <%= link_to 'Clone', thing_clone_path(@thing) %> <%= link_to 'Destroy', @thing, :confirm => 'Are you sure?', :method => :delete %>

<p><%= link_to 'New Thing', new_thing_path %></p>