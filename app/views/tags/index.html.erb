<h1>Tags</h1>

<table class="index">
  <tr>
    <th>Tag</th>
    <th>Count</th>
    <th>Things</th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= link_to tag.name, tag_things_path(:tag => tag.name) %></td>
    <td><%= tag.count %></td>
    <td>
      <% Thing.tagged_with(tag.name).each do |thing| %>
        <%= thing_link(thing) %><br />
      <% end %>
    </td>
  </tr>
<% end  %>

</table>
